@page
@model Hackaton.App.Presentacion.Pages.CambioPasswordModel
@{
    <div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label class="control-label">Contraseña:</label>
                <input asp-for="Contrasenia" type="text" class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Ingrese de nuevo la contraseña:</label>
                <input asp-for="RepeatContrasenia" type="password" class="form-control" />
                <span class="text-danger">@Model.MensajePassword</span>
            </div>

            <div class="form-group">
                <input type="submit" value="Ingresar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
}
